/* Problem Solution Section */
.problem-solution {
  padding: 100px 20px;
  background: linear-gradient(135deg, rgba(10, 10, 10, 0.95) 0%, rgba(20, 20, 20, 0.95) 50%, rgba(10, 10, 10, 0.95) 100%);
  position: relative;
}

.problem-solution::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent 0%, #d4af37 50%, transparent 100%);
}

.section-header {
  text-align: center;
  margin-bottom: 60px;
}

.solutions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto 60px;
}

.solution-card {
  background: linear-gradient(135deg, rgba(30, 30, 30, 0.8) 0%, rgba(20, 20, 20, 0.9) 100%);
  border: 1px solid rgba(212, 175, 55, 0.2);
  border-radius: 15px;
  padding: 35px 25px;
  transition: all 0.4s ease;
  position: relative;
  overflow: hidden;
}

.solution-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background: linear-gradient(90deg, #d4af37 0%, #f4d03f 100%);
  transform: scaleX(0);
  transition: transform 0.4s ease;
}

.solution-card:hover::before {
  transform: scaleX(1);
}

.solution-card:hover {
  border-color: #d4af37;
  transform: translateY(-10px);
  box-shadow: 0 20px 40px rgba(212, 175, 55, 0.25);
}

.solution-icon {
  font-size: 3rem;
  text-align: center;
  margin-bottom: 20px;
  filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.5));
}

.solution-content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.solution-problem {
  font-size: 1.05rem;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  font-weight: 500;
  min-height: 3.2rem;
}

.solution-answer {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 15px;
  background: rgba(212, 175, 55, 0.05);
  border-left: 3px solid #d4af37;
  border-radius: 5px;
}

.solution-label {
  font-size: 0.75rem;
  color: #d4af37;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 600;
}

.solution-title {
  font-family: 'Playfair Display', serif;
  font-size: 1.5rem;
  color: #d4af37;
  font-weight: 700;
  margin: 0;
}

.solution-description {
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.7;
  font-size: 0.9rem;
}

.solution-benefits {
  list-style: none;
  padding: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin: 10px 0;
}

.solution-benefits li {
  background: rgba(212, 175, 55, 0.1);
  color: #d4af37;
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  border: 1px solid rgba(212, 175, 55, 0.3);
}

.btn-solution {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 12px 24px;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #0a0a0a;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 700;
  font-size: 0.9rem;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  margin-top: 10px;
}

.btn-solution:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(212, 175, 55, 0.4);
}

.btn-solution svg {
  transition: transform 0.3s ease;
}

.btn-solution:hover svg {
  transform: translateX(5px);
}

.cta-all-treatments {
  text-align: center;
  padding-top: 40px;
  border-top: 1px solid rgba(212, 175, 55, 0.2);
}

.cta-all-treatments p {
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 20px;
  font-size: 1rem;
}

.btn-all-treatments {
  display: inline-block;
  padding: 15px 40px;
  background: transparent;
  border: 2px solid #d4af37;
  color: #d4af37;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 700;
  font-size: 1rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

.btn-all-treatments:hover {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #0a0a0a;
  transform: scale(1.05);
}

