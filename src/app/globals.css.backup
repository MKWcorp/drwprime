  .gallery-grid a {
    aspect-ratio: 1;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  /* Gallery responsiveness */
  .gallery-grid {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 20px;
    padding: 0 15px;
